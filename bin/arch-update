#!/bin/sh
date=`date +%Y.%m.%d-%H:%m`
sudo sh -c "\
	btrfs subvolume snapshot / /roots/snaps/$date-preupdate;\
	curl 'https://www.archlinux.org/mirrorlist/?country=US&protocol=http&protocol=https&ip_version=4&use_mirror_status=on' | sed 's/^#Server/Server/' > /etc/pacman.d/mirrorlist;\
	pacman -Syu;\
	btrfs subvolume snapshot / /roots/snaps/$date-postupdate;\
"
