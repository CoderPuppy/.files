#!/bin/zsh
WM_EXIT=${WM_EXIT:-i3-msg exit}
opt="$((echo Lock && echo Shutdown && echo Reboot && echo Suspend && echo Logout && echo Hibernate && echo Sleep) | xboomx_sort.py session-exit | dmenu -i | xboomx_update.py session-exit)" &&
case "$opt" in
	(Lock) lock;;
	(Shutdown) systemctl poweroff;;
	(Reboot) systemctl reboot;;
	(Suspend) suspend suspend;;
	(Sleep) suspend hybrid-sleep;;
	(Logout) eval "$WM_EXIT";;
	(Hibernate) suspend hibernate;;
esac
