# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# This config file uses keycodes (bindsym) and was written for the QWERTY
# layout.
#
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
#

set $Mod Mod4
set $AMod Mod1
set $HOME /home/cpup

# Assign workspace 9 (the hardest to reach) on VGA1
workspace 99:C output VGA1
workspace 10:A output LVDS1
workspace 11:I output LVDS1
workspace 12:T output LVDS1
workspace 21 output LVDS1
workspace 22 output LVDS1
workspace 23 output LVDS1
workspace 24 output LVDS1
workspace 25 output LVDS1
workspace 26 output LVDS1
workspace 27 output LVDS1
workspace 28 output LVDS1
workspace 29 output LVDS1
workspace 20 output LVDS1

focus_follows_mouse no
workspace_auto_back_and_forth yes

exec ~/.files/i3/start

# floating hangouts
for_window [class="Google\-chrome" instance="crx"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [class="^Xfce4-notifyd$" instance="^xfce4-notifyd$"] floating enable

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# use Mouse+$Mod to drag floating windows to their wanted position
floating_modifier $Mod

workspace_layout tabbed


# class                 border  backgr. text    indicator
client.focused          #5A3637 #2f1f1f #ededed #dddddd
client.focused_inactive #333333 #1f1f1f #c0b18b #292d2e
client.unfocused        #333333 #1f1f1f #c0b18b #292d2e
client.urgent           #d17b49 #3f1f1f #ffffff #900000
