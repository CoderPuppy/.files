#
# bspwm hotkeys
#

super + q
	WM_EXIT="bspc quit" exit-menu

super + shift + q
	bspc window -c

super + b
	bspc desktop -B

super + {space,f}
	bspc window -t {floating,fullscreen}

super + {_, shift + } Tab
	bspc desktop -f {next, prev}.occupied

alt + {_, shift + } Tab
	bspc window -f {next, prev}

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{j,k,l,semicolon}
	bspc window -{f,s} {left,down,up,right}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {j,k,l,semicolon}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {j,k,l,semicolon}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {j,k,l,semicolon}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {1-9,0}
	to_desktop={1-9,0} \
	;if [[ "$(bspc query -D -d focused)" = "$to_desktop" ]]; then \
		bspc desktop last -f \
	;else \
		bspc desktop $to_desktop -f \
	;fi

super + shift + {1-9,0}
	bspc window -d {1-9,0}

super + {a,w,e,c}
	to_desktop={W,I,T,C} \
	;if [[ "$(bspc query -D -d focused)" = "$to_desktop" ]]; then \
		bspc desktop last -f \
	;else \
		bspc desktop $to_desktop -f \
	;fi

super + shift + {a,w,e,c}
	bspc window -d {W,I,T,C}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	tabbed -r 2 st -w '' -e tmux

super + d
	launcher

# make sxhkd reload its configuration files:
super + n
	pkill -USR1 -x sxhkd
